@page
@model BulkyWeb_Razor.Pages.Categories.Index

<!DOCTYPE html>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page ="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
                Category Name 1
            </th>
            <th>
                Display Order
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.CategoryList.OrderBy(order => order.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"> Edit</i>
                        </a>
                        <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"> Delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>