@model Bulky.Models.Company

<form method="post">
    <input asp-for="Id" hidden=""/>
    <div class="border p-3 mt-4 mb-4">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row pb-2">
            <h1>Delete Company</h1>
            <hr/>
        </div>

        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="StreetAddress"></label>
            <input disabled asp-for="StreetAddress" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="City"></label>
            <input disabled asp-for="City" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="State"></label>
            <input disabled asp-for="State" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="PostalCode"></label>
            <input disabled asp-for="PostalCode" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="PhoneNumber"></label>
            <input disabled asp-for="PhoneNumber" class="form-control"/>
        </div>

        <div class="row mb-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Company" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}