@model Bulky.Models.Product

<form method="post">
    <input asp-for="Id" hidden=""/>
    <div class="border p-3 mt-4 mb-4">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row pb-2">
            <h1>Delete Category</h1>
            <hr/>
        </div>

        <div class="mb-3 row">
            <label asp-for="Title"></label>
            <input disabled asp-for="Title" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <input disabled asp-for="Description" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="ISBN"></label>
            <input disabled asp-for="ISBN" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="Author"></label>
            <input disabled asp-for="Author" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="ListPrice"></label>
            <input disabled asp-for="ListPrice" class="form-control"/>
        </div>

        <div class="mb-3 row">
            <label asp-for="Price"></label>
            <input disabled asp-for="Price" class="form-control"/>
        </div>
        
        <div class="mb-3 row">
            <label asp-for="Price50"></label>
            <input disabled asp-for="Price50" class="form-control"/>
        </div>
        
        <div class="mb-3 row">
            <label asp-for="Price100"></label>
            <input disabled asp-for="Price100" class="form-control"/>
        </div>

        <div class="row mb-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}