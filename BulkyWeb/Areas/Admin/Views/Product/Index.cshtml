@model System.Collections.Generic.List<Bulky.Models.Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> Create New Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>            
            <th>
                ISBN
            </th>            
            <th>
                Author
            </th>
            <th>
                Category
            </th>
            <th>
                
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.OrderBy(order => order.Id))
        {
        <tr>
            <td>@obj.Title</td>
            <td>@obj.Price</td>

            <td>@obj.Description</td>
            <td>@obj.ISBN</td>
            <td>@obj.Author</td>
            <td>
                
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"> Edit</i>
                    </a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"> Delete</i>
                    </a>
                </div>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>